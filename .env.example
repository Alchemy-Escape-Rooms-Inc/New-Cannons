# Email Configuration
# Copy this file to .env and fill in your actual values

# Your email address (where you want to receive the news updates)
RECIPIENT_EMAIL=your-email@example.com

# Sender email configuration (Gmail example)
SENDER_EMAIL=your-sender-email@gmail.com
SENDER_PASSWORD=your-app-password-here
SENDER_NAME=Escape Room News Bot

# SMTP Server Settings
# For Gmail, use smtp.gmail.com and port 587
# For Outlook, use smtp-mail.outlook.com and port 587
# For Yahoo, use smtp.mail.yahoo.com and port 587
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Scraper Settings
SEND_EMAIL=true
